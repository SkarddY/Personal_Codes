using UnityEngine;
using System.Collections;

public class CharacterControl : MonoBehaviour 
{
  Rigidbody mCharacter;
  Vector3 direction = new Vector3(0, 1, 0);
  float sent = 1;
  [SerializeField] float magnitude = 500;

  void Start()
  {
    mCharacter = GetComponent<Rigidbody>();
  }
  
  void Update() 
  {
    if (Input.GetButtonDown("Jump")) // Hold up to jump more
    {
      magnitude =+ Time.deltaTime * 50; // The jump increases 50N per second
    }
    if (Input.GetButtonUp("Jump")) 
    {
      Vector3 forc = direction * magnitude * sent;
      mCharacter.AddForce(forc);
    }
  }
}
